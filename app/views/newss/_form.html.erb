<% if current_user.admin? %>
    <%= form_for(@news_send, :url => {:controller => :newss, :action => :create}) do |f| %>
                
                題名:<br />
                    <%= f.text_field :news_title %><br />
                    
                内容:<br />
                    <%= f.text_area :news_body %><br />
                    
                開催地:<br />
                <%= f.text_area :news_point %><br />
                
                <%= image_tag @news_send.photo.url if @news_send.photo %>
                
                <%= f.label :投稿する写真 %>
                <%= f.file_field :photo %>
                
                <%= f.submit %>
    <% end %>
<% end %>