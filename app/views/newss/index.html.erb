<div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <nav>
            <%= render 'layouts/header' %>
          </nav>
          
            
            
           <% @news_sends.each do |news_sends| %>

           <div class="contentsarea">  
              <h3><%= news_sends.news_title %></h3>
              <br>
                
              <%= news_sends.news_body %>
              <br>
              　開催地：
              <%= news_sends.news_point %>
              <br>
              <div>
                <%= image_tag(news_sends.photo.url) %>
              </div>
              
                <br>
                <div>
                  <% if user_signed_in? %>
                    <% if current_user.admin? %>  
                      (<%= link_to "edit" , edit_newss_path(news_sends) %>
                      <%= link_to "destroy" , newss_path(news_sends) , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>)
                    <% end %>
                  <% end %>
                </div>
           </div>
           <% end %> 
                        
        </div>
      </div>
</div>
    
    
    
<footer style="background-color:gray">Footer</footer>  

<%= render 'form' %>